                                <TextBox Text="{Binding PW}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1072;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;NewPW=654321&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C10 取污染物实时数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C10}"/>
                                <CheckBox Content="上传实时数据" Margin="5,0" IsChecked="{Binding Rtd}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2011;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C11 停止察看污染物实时数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C11}"/>
                                <CheckBox Content="上传实时数据" Margin="5,0" IsChecked="{Binding Rtd}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2012;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C12 取设备运行状态数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C12}"/>
                                <CheckBox Content="上传设备运行状态" Margin="5,0" IsChecked="{Binding RunningState}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2021;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C13 停止察看设备运行状态">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C13}"/>
                                <CheckBox Content="上传设备运行状态" Margin="5,0" IsChecked="{Binding RunningState}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2022;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C14 上传污染物实时数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding RealTimeDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Rtd" Binding="{Binding Rtd}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                        <DataGridTextColumn Header="SampleTime" Binding="{Binding SampleTime}" Width="*"/>
                                        <DataGridTextColumn Header="EFlag" Binding="{Binding EFlag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C14}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C14TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C14}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C14}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=91;CN=9014;PW=123456;MN=010000A8900016F" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C15 上传设备运行状态数据">
                            <StackPanel Background="#FFE5E5E5" Height="400">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding RunningStateDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染治理设施名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="RunningState" Binding="{Binding RS}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C15}" Margin="5,0"/>
                                <Button Content="发送" Margin="5" Command="{Binding C15TestCommand}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240429114224393;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C16 上传污染物分钟数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding MinuteDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C16}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C16TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C16}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C16}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240430102725064;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C17 上传污染物小时数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding HourDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C17}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C17TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C17}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C17}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240430102725064;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C18 上传污染物日历史数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding DayDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C18}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C18TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>

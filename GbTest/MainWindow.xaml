                                <TextBox Text="{Binding MinInterval}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1064;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;MinInterval=10&amp;&amp;s" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C9 设置现场机访问密码">

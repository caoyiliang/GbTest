                        <Expander Header="C20 取污染物分钟历史数据(遵循C47-C50的规则)">
                            <StackPanel Background="#FFE5E5E5" Height="500">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C20}"/>

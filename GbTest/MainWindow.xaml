                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240430102725064;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C19 上传设备运行时间日历史数据">
                            <StackPanel Background="#FFE5E5E5" Height="400">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding RunningTimeDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染治理设施名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="RunningTime" Binding="{Binding RT}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C19}" Margin="5,0"/>
                                <Button Content="发送" Margin="5" Command="{Binding C19TestCommand}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>

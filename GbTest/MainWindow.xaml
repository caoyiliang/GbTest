<Window x:Class="GbTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:GbTest" 
        xmlns:viewmodel="clr-namespace:GbTest.ViewModel"
        xmlns:convert="clr-namespace:GbTest.Converter"
        xmlns:b="clr-namespace:GbTest.Behavior"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="模拟国标现场机" Height="450" Width="800">
    <Window.Resources>
        <convert:StatusConverter x:Key="StatusConverter"/>
        <convert:InverseConverter x:Key="InverseConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="通讯配置(_C)" Command="{Binding ConnectionConfigCommand}" IsEnabled="{Binding IsOpen,Converter={StaticResource InverseConverter}}"/>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Content}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <ScrollViewer IsEnabled="{Binding IsOpen}">
                    <StackPanel Orientation="Vertical">
                        <Expander Header="C1 设置超时时间及重发次数">
                            <StackPanel Background="#FFE5E5E5" Height="200">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C1}"/>
                                <TextBlock Text="超时时间(秒):" Margin="5"/>
                                <TextBox Text="{Binding OverTime}" Margin="5,0"/>
                                <TextBlock Text="重发次数:" Margin="5"/>
                                <TextBox Text="{Binding ReCount}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1000;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;OverTime=5;ReCount=3&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C2 提取现场机时间">
                            <StackPanel Background="#FFE5E5E5" Height="120">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C2}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1011;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;PolId=w01018&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C3 设置现场机时间">
                            <StackPanel Background="#FFE5E5E5" Height="180">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C3}"/>
                                <TextBlock Text="收到时间:" Margin="5"/>
                                <TextBox Text="{Binding SystemTime}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1012;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;PolId=w01018;SystemTime=20160801085857&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C4 现场机时间校准请求">
                            <StackPanel Background="#FFE5E5E5" Height="200">
                                <TextBlock Text="仪表对应污染物编码 :" Margin="5"/>
                                <TextBox Text="{Binding PolId_C4}" Margin="5,0"/>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C4}" Margin="5,0"/>
                                <Button Content="发送" Margin="5" Command="{Binding C4TestCommand}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=91;CN=9013;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C5 提取实时数据间隔">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C5}"/>
                                <TextBlock Text="实时数据间隔(秒):" Margin="5"/>
                                <TextBox Text="{Binding RtdInterval}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1061;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C6 设置实时数据间隔">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C6}"/>
                                <TextBlock Text="实时数据间隔(秒):" Margin="5"/>
                                <TextBox Text="{Binding RtdInterval}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1062;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;RtdInterval=30&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C7 提取分钟数据间隔">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C7}"/>
                                <TextBlock Text="分钟数据间隔:" Margin="5"/>
                                <TextBox Text="{Binding MinInterval}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1063;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C8 设置分钟数据间隔">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C8}"/>
                                <TextBlock Text="分钟数据间隔:" Margin="5"/>
                                <TextBox Text="{Binding MinInterval}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1064;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;MinInterval=10&amp;&amp;s" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C9 设置现场机访问密码">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C9}"/>
                                <TextBlock Text="访问密码:" Margin="5"/>
                                <TextBox Text="{Binding PW}" Margin="5,0"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=1072;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;NewPW=654321&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C10 取污染物实时数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C10}"/>
                                <CheckBox Content="上传实时数据" Margin="5,0" IsChecked="{Binding Rtd}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2011;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C11 停止察看污染物实时数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C11}"/>
                                <CheckBox Content="上传实时数据" Margin="5,0" IsChecked="{Binding Rtd}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2012;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C12 取设备运行状态数据">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C12}"/>
                                <CheckBox Content="上传设备运行状态" Margin="5,0" IsChecked="{Binding RunningState}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2021;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C13 停止察看设备运行状态">
                            <StackPanel Background="#FFE5E5E5" Height="150">
                                <CheckBox Content="启用" Margin="5" IsChecked="{Binding C13}"/>
                                <CheckBox Content="上传设备运行状态" Margin="5,0" IsChecked="{Binding RunningState}"/>
                                <TextBlock Text="测试命令:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=32;CN=2022;PW=123456;MN=010000A8900016F000169DC0;Flag=5;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C14 上传污染物实时数据(C29上传工况实时数据 同)">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding RealTimeDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Rtd" Binding="{Binding Rtd}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                        <DataGridTextColumn Header="SampleTime" Binding="{Binding SampleTime}" Width="*"/>
                                        <DataGridTextColumn Header="EFlag" Binding="{Binding EFlag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C14}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C14TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C14}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C14}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20160801085857223;ST=91;CN=9014;PW=123456;MN=010000A8900016F" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C15 上传设备运行状态数据">
                            <StackPanel Background="#FFE5E5E5" Height="400">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding RunningStateDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染治理设施名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="RunningState" Binding="{Binding RS}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C15}" Margin="5,0"/>
                                <Button Content="发送" Margin="5" Command="{Binding C15TestCommand}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240429114224393;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C16 上传污染物分钟数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding MinuteDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C16}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C16TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C16}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C16}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240430102725064;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C17 上传污染物小时数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding HourDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C17}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C17TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C17}" Margin="5,0"/>
                                <CheckBox Content="启用自动发送" Margin="5" IsChecked="{Binding C17}"/>
                                <TextBlock Text="服务器回复测试命令样例，实际QN会改变:(点击复制)" Margin="5"/>
                                <TextBlock Text="QN=20240430102725064;ST=91;CN=9014;PW=123456;MN=010000A8900016F000169DC0;Flag=4;CP=&amp;&amp;&amp;&amp;" Margin="10,5,10,10" TextDecorations="Underline" TextWrapping="Wrap">
                                    <i:Interaction.Behaviors>
                                        <b:CopyBehavior/>
                                    </i:Interaction.Behaviors>
                                </TextBlock>
                            </StackPanel>
                        </Expander>
                        <Expander Header="C18 上传污染物日历史数据">
                            <StackPanel Background="#FFE5E5E5" Height="440">
                                <DataGrid Height="200" Margin="5" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" ItemsSource="{Binding DayDatas}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="污染物名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="Cou" Binding="{Binding Cou}" Width="*"/>
                                        <DataGridTextColumn Header="Min" Binding="{Binding Min}" Width="*"/>
                                        <DataGridTextColumn Header="Avg" Binding="{Binding Avg}" Width="*"/>
                                        <DataGridTextColumn Header="Max" Binding="{Binding Max}" Width="*"/>
                                        <DataGridTextColumn Header="Flag" Binding="{Binding Flag}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <TextBlock Text="响应超时（毫秒） :" Margin="5"/>
                                <TextBox Text="{Binding TimeOut_C18}" Margin="5,0"/>
                                <Button Content="单次发送" Margin="5" Command="{Binding C18TestCommand}"/>
                                <TextBlock Text="波动百分比(%) :" Margin="5"/>
                                <TextBox Text="{Binding Fluctuation_C18}" Margin="5,0"/>
